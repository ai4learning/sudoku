	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-primary" id="btn_submit">保存</a>
	<a href="javascript:;" class="btn"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 
		 spelling:  {must: true, maxlength:128, ftip:'单词拼写,最多128个字符'},
		 meaning:  {must: true, maxlength:255, ftip:'释义,最多255个字符'},
		 soundMarkUs:  {must: true, maxlength:128, ftip:'美音音标,最多128个字符'},
		 soundMarkUk:  {must: true, maxlength:128, ftip:'国际音标,最多128个字符'},
		 wordType:  {must: true, maxlength:50, ftip:'词性,最多50个字符'},
		 mediaUri:  {must: true, maxlength:255, ftip:'读音,最多255个字符'},
		 state:  {must: true, maxlength:3, ftip:'状态,最多3个字符'}
	};
	

	j('#btn_submit').click(function(e) {
		gUtils.fSubmitForm(
			j("#form1").serialize(), 
			set, 
			'/word/doAdd.action', 
			function() {
				gDialog.fClose();
				queryList(1);
			}
		);
	});
	
	//form.friend.init(set);
}(jQuery);
</script>