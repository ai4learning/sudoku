#set($layout='/WEB-INF/vm/layout/adminLayout.vm')

        
	<script type="text/javascript">
		require(['calendar'],function(calendar){
			
				jQuery("#view_wordstudystatistic").find(".j_datetime_picker").calendar({
						frondose : true,
						disabled: false
					});
				
		});

	</script>
	
    


<div class="modal-body " id="view_wordstudystatistic">
	<form class="form-horizontal"  id="form1" role="form">
	
		<div class="form-group">
			<label class="col-sm-2 control-label" for="id">ID</label>
			<div class="col-sm-8 controls">
			
							<input type="text" class="form-control" name="id" id="id" value="$!{wordStudyStatistic.id}" readonly/>
				
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="studentId">学生ID</label>
			<div class="col-sm-8 controls">
			
							<input type="text" class="form-control" name="studentId" id="studentId" value="$!{wordStudyStatistic.studentId}" readonly/>
				
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="count">单词数</label>
			<div class="col-sm-8 controls">
			
							<input type="text" class="form-control" name="count" id="count" value="$!{wordStudyStatistic.count}" readonly/>
				
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="state">状态</label>
			<div class="col-sm-8 controls">
			
        
		<select class="forms_select input-medium form-control" name="state" id="state" disabled>
						<option value="1" #if($wordStudyStatistic.state==1) selected  #end>有效</option>
				<option value="2" #if($wordStudyStatistic.state==2) selected  #end>无效</option>

		</select>
	
    

			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="created">创建时间</label>
			<div class="col-sm-8 controls">
			
					<input type="text"  class="form-control" name="created" id="created" value="$!dateFormatUtils.format($!wordStudyStatistic.created)" readonly/>
						
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="modified">修改时间</label>
			<div class="col-sm-8 controls">
			
					<input type="text"  class="form-control" name="modified" id="modified" value="$!dateFormatUtils.format($!wordStudyStatistic.modified)" readonly/>
						
			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-sm" onclick="backToManage();">返回</a>
</div>


<script language="javascript">


function backToManage(){
	var url='/wordStudyStatistic/manage.action';
	gUtils.fMakeFullLink(url);
    window.location=url;
}

</script>