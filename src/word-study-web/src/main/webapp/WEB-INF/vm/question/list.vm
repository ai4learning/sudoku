
<div class="row-fluid">
	<div class="span12">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
 			<th><span>ID</span></th>
			<th><span>试题类型</span></th>
			<th><span>课程ID</span></th>
			<th><span>单元号</span></th>
			<th><span>单词ID</span></th>
			<th><span>单词CODE</span></th>
			<th><span>单词拼写</span></th>
			<th><span>题描述</span></th>
			<th><span>选项</span></th>
			<th><span>正确答案</span></th>
			<th><span>难易层度</span></th>
			<th><span>状态</span></th>
			<th><span>修改时间</span></th>

				<th class="operate">操作</th>
				</tr>
			</thead>


			<tbody>
	#if($list && $list.size()!=0)
		    #foreach($item in $list)
		   <tr>
				 			<td>$!item.id</td>
			<td>
	
			
				#if($item.questionType==0)<span class="">英译汉</span> #end	
			
				#if($item.questionType==1)<span class="">汉译英</span> #end	
			
				#if($item.questionType==3)<span class="">听选</span> #end	
			
				#if($item.questionType==4)<span class="">听写</span> #end	
			
	
	</td>
			<td>$!item.lessonId</td>
			<td>$!item.unitNbr</td>
			<td>$!item.wordId</td>
			<td>$!item.vocCode</td>
			<td>$!item.spelling</td>
			<td>$!item.question</td>
			<td>$!item.choices</td>
			<td>$!item.answerIndex</td>
			<td>
	
			
				#if($item.level==0)<span class="">未知</span> #end	
			
				#if($item.level==1)<span class="">容易</span> #end	
			
				#if($item.level==2)<span class="">中等</span> #end	
			
				#if($item.level==3)<span class="">较难</span> #end	
			
	
	</td>
			<td>
	
			
				#if($item.state==1)<span class="">有效</span> #end	
			
				#if($item.state==2)<span class="">无效</span> #end	
			
	
	</td>
			<td>$!dateFormatUtils.format($!item.modified)</td>

				<td class="operate">
					<button class="btn btn-primary JUpdate-question" type="button" itemid="$!item.id">编辑</button>
					<button class="btn btn-info JView-question" type="button" itemid="$!item.id">查看</button>
					<button class="btn btn-warning JDelete-question" type="button" itemid="$!item.id">删除</button>
				</td>
		  </tr>
			#end
		#else
		<tr>
					<td colspan="15" class="message_default">没有记录！</td>
		</tr>
		#end


			</tbody>


		</table>

		#if($pageQuery)
			#showPageQuery($pageQuery,'queryList','input')
		#end

	</div>
</div>



<script language="javascript">
void function(j) {	
	j('.JDelete-question').click(function() {
		var id = j(this).attr('itemid');
		var config={title:'删除Question',info:'您确定要删除Question吗？',url: '/question/doDelete',param:'id='+id};
		gUtils.fConfirmAndRefreshList(config);
	});
	
	j('.JUpdate-question').click(function() {
		var id = j(this).attr('itemid');
		gDialog.fCreate({ title: '修改Question', url: '/question/update?id='+id,width:700}).show();
	});

	j('.JView-question').click(function() {
		var id = j(this).attr('itemid');
		gDialog.fCreate({ title: '查看Question', url: '/question/view?id='+id,width:700}).show();
	});
}(jQuery);
</script>