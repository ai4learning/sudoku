			 <button class="btn  btn-primary" type="button" id="add-paper">创建 试卷</button>
		</div>


	<div id="dl_Paper"></div>
</div>
<script language="javascript">
	function queryPaperList(pageNo) {
		if (!pageNo) {
			pageNo = 1;
		}
		var page = pageNo;
		var url = '/paper/list.action';
		var param = {
			page: page
		};
		
		var pageSize=jQuery("#JPageSize_queryList").val();
        if(pageSize && !isNaN(pageSize)){
            param['pageSize']=pageSize;
        }

		gUtils.fMergeParam(param,"searchForm_Paper");
		gUtils.fGetHtml(url, 'dl_Paper', param,'数据加载中...');
	}
	queryPaperList();




void function(j) {
	jQuery("#add-paper").click(function(){
		gDialog.fCreate({title: '创建 试卷', url: '/paper/add.action',width:700}).show();
	});
	
}(jQuery);

</script>