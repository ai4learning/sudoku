<script language="javascript">
	function queryList(pageNo) {	
		if (!pageNo) {
			pageNo = 1;
		}
		var page = pageNo;
		var url = '/selfWords/list.action';
		var param = {
			page: page
		};
		
		var pageSize=jQuery("#JPageSize_queryList").val();
        if(pageSize && !isNaN(pageSize)){
            param['pageSize']=pageSize;
        }

		getOtherParams(param);
		gUtils.fGetHtml(url, 'dl', param,'数据加载中...');
	}
	queryList();
	

	function getOtherParams(param){
   
	  	var id_search=jQuery("#id_search").val();
		if(id_search!=null&&id_search!=''){
				param.id=id_search;
			}
			 
	  	var studyId_search=jQuery("#studyId_search").val();
		if(studyId_search!=null&&studyId_search!=''){
				param.studyId=studyId_search;
			}
			 
	  	var type_search=jQuery("#type_search").val();
		if(type_search!=null&&type_search!=''){
				param.type=type_search;
			}
			 
	  	var studentId_search=jQuery("#studentId_search").val();
		if(studentId_search!=null&&studentId_search!=''){
				param.studentId=studentId_search;
			}
			 
	  	var lessonId_search=jQuery("#lessonId_search").val();
		if(lessonId_search!=null&&lessonId_search!=''){
				param.lessonId=lessonId_search;
			}
			 
	  	var wordId_search=jQuery("#wordId_search").val();
		if(wordId_search!=null&&wordId_search!=''){
				param.wordId=wordId_search;
			}
			 
	  	var state_search=jQuery("#state_search").val();
		if(state_search!=null&&state_search!=''){
				param.state=state_search;
			}
					
	}




void function(j) {
	jQuery("#add-selfWords").click(function(){
		gDialog.fCreate({title: '创建 SelfWords', url: '/selfWords/add.action',width:700}).show();
	});
	
}(jQuery);

</script>