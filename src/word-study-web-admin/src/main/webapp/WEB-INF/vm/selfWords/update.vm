
    
<div class="modal-body auto-height-body">
	<form class="form-horizontal"  id="form1">
	
		 <div class="control-group">
			<label class="control-label" for="id">ID</label>
			<div class="controls">
			
				<input type="text"  name="id" id="id" placeholder="请输入ID" maxlength="19" value="$!{selfWords.id}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="moduleCode">模块CODE</label>
			<div class="controls">
			
				<input type="text"  name="moduleCode" id="moduleCode" placeholder="请输入模块CODE" maxlength="50" value="$!{selfWords.moduleCode}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="studyId">学生ID</label>
			<div class="controls">
			
				<input type="text"  name="studyId" id="studyId" placeholder="请输入学生ID" maxlength="19" value="$!{selfWords.studyId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="type">类型</label>
			<div class="controls">
			
		
		<select class="forms_select" name="type" id="type">
				<option value="1" #if($selfWords.type==1) selected #end>复习词库</option>
				<option value="2" #if($selfWords.type==2) selected #end>错词库</option>

		</select>
		
	

			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="studentId">学生ID</label>
			<div class="controls">
			
				<input type="text"  name="studentId" id="studentId" placeholder="请输入学生ID" maxlength="19" value="$!{selfWords.studentId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="userCode">用户CODE</label>
			<div class="controls">
			
				<input type="text"  name="userCode" id="userCode" placeholder="请输入用户CODE" maxlength="50" value="$!{selfWords.userCode}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="lessonId">课程ID</label>
			<div class="controls">
			
				<input type="text"  name="lessonId" id="lessonId" placeholder="请输入课程ID" maxlength="10" value="$!{selfWords.lessonId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="unitNbr">单元号</label>
			<div class="controls">
			
				<input type="text"  name="unitNbr" id="unitNbr" placeholder="请输入单元号" maxlength="3" value="$!{selfWords.unitNbr}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="vocCode">单词CODE</label>
			<div class="controls">
			
				<input type="text"  name="vocCode" id="vocCode" placeholder="请输入单词CODE" maxlength="50" value="$!{selfWords.vocCode}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="vocIndex">单词索引</label>
			<div class="controls">
			
		
		<select class="forms_select" name="vocIndex" id="vocIndex">

		</select>
		
	

			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="wordId">单词ID</label>
			<div class="controls">
			
				<input type="text"  name="wordId" id="wordId" placeholder="请输入单词ID" maxlength="10" value="$!{selfWords.wordId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="spelling">单词拼写</label>
			<div class="controls">
			
				<input type="text"  name="spelling" id="spelling" placeholder="请输入单词拼写" maxlength="128" value="$!{selfWords.spelling}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="state">状态</label>
			<div class="controls">
			
		
		<select class="forms_select" name="state" id="state">
				<option value="1" #if($selfWords.state==1) selected #end>有效</option>
				<option value="2" #if($selfWords.state==2) selected #end>无效</option>

		</select>
		
	

			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-primary" id="btn_submit">保存修改</a>
	<a href="javascript:;" class="btn"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 
		 id:  {must: true, maxlength:19, ftip:'ID,最多19个字符'},
		 moduleCode:  {must: true, maxlength:50, ftip:'模块CODE,最多50个字符'},
		 studyId:  {must: true, maxlength:19, ftip:'学生ID,最多19个字符'},
		 type:  {must: true, maxlength:3, ftip:'类型,最多3个字符'},
		 studentId:  {must: true, maxlength:19, ftip:'学生ID,最多19个字符'},
		 userCode:  {must: true, maxlength:50, ftip:'用户CODE,最多50个字符'},
		 lessonId:  {must: true, maxlength:10, ftip:'课程ID,最多10个字符'},
		 unitNbr:  {must: true, maxlength:3, ftip:'单元号,最多3个字符'},
		 vocCode:  {must: true, maxlength:50, ftip:'单词CODE,最多50个字符'},
		 vocIndex:  {must: true, maxlength:3, ftip:'单词索引,最多3个字符'},
		 wordId:  {must: true, maxlength:10, ftip:'单词ID,最多10个字符'},
		 spelling:  {must: true, maxlength:128, ftip:'单词拼写,最多128个字符'},
		 state:  {must: true, maxlength:3, ftip:'状态,最多3个字符'}
	};
	

	j('#btn_submit').click(function(e) {
		gUtils.fSubmitForm(
			j("#form1").serialize(), 
			set, 
			'/selfWords/doUpdate.action', 
			function() {
				gDialog.fClose();
				queryList(1);
			}
		);
	});
	
	//form.friend.init(set);
}(jQuery);
</script>