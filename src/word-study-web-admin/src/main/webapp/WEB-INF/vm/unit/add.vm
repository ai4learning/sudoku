#set($layout='/WEB-INF/vm/layout/adminLayout.vm')

    
<div class="modal-body auto-height-body"   id="add_unit">
	<form class="form-horizontal"  id="form_add_Unit">
	
		 <div class="control-group">
			<label class="control-label" for="moduleCode">单元CODE</label>
			<div class="controls">
			
				<input type="text"  name="moduleCode" id="moduleCode" placeholder="请输入单元CODE" maxlength="50"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="lessonId">课程ID</label>
			<div class="controls">
			
				<input type="text"  name="lessonId" id="lessonId" placeholder="请输入课程ID" maxlength="19"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="unitNbr">单元号</label>
			<div class="controls">
			
				<input type="text"  name="unitNbr" id="unitNbr" placeholder="请输入单元号" maxlength="3"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="unit">单元名称</label>
			<div class="controls">
			
				<input type="text"  name="unit" id="unit" placeholder="请输入单元名称" maxlength="20"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="totalWords">单元单词数</label>
			<div class="controls">
			
				<input type="text"  name="totalWords" id="totalWords" placeholder="请输入单元单词数" maxlength="3"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="state">状态</label>
			<div class="controls">
			
        
		<select class="forms_select input-medium" name="state" id="state">
			
				<option value="1">有效</option>
				<option value="2">无效</option>
		</select>
	
    

			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-primary" id="btn_add_Unit">保存</a>
	<a href="javascript:;" class="btn"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 		moduleCode:  {must: false, maxlength:50, ftip:'单元CODE,最多50个字符'},
		lessonId:  {must: false, maxlength:19, ftip:'课程ID,最多19个字符' ,handler:'int' },
		unitNbr:  {must: false, maxlength:3, ftip:'单元号,最多3个字符' ,handler:'int' },
		unit:  {must: false, maxlength:20, ftip:'单元名称,最多20个字符'},
		totalWords:  {must: false, maxlength:3, ftip:'单元单词数,最多3个字符' ,handler:'int' },
		state:  {must: false, maxlength:3, ftip:'状态,最多3个字符' ,handler:'int' }
	};
	

	j('#btn_add_Unit').click(function(e) {
		gUtils.fSubmitForm(
			j("#form_add_Unit").serialize(),
			set, 
			'/unit/doAdd.action', 
			function() {
				gDialog.fClose();
				queryUnitList(1);
			}
		);
	});
	
}(jQuery);
</script>