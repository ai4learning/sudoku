<script language="javascript">
	function queryUnitList(pageNo) {
		if (!pageNo) {
			pageNo = 1;
		}
		var page = pageNo;
		var url = '/unit/list.action';
		var param = {
			page: page
		};
		
		var pageSize=jQuery("#JPageSize_queryList").val();
        if(pageSize && !isNaN(pageSize)){
            param['pageSize']=pageSize;
        }

		gUtils.fMergeParam(param,"searchForm_Unit");
		gUtils.fGetHtml(url, 'dl_Unit', param,'数据加载中...');
	}
	queryUnitList();




void function(j) {
	jQuery("#add-unit").click(function(){
		gDialog.fCreate({title: '创建 课程单元', url: '/unit/add.action',width:700}).show();
	});
	
}(jQuery);

</script>