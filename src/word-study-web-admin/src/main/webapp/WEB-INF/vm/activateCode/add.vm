

    
<div class="modal-body auto-height-body">
	<form class="form-horizontal"  id="form1">
	
		 <div class="control-group">
			<label class="control-label" for="activateCode">激活码</label>
			<div class="controls">
			
				<input type="text"  name="activateCode" id="activateCode" placeholder="请输入激活码" maxlength="50"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="lessonId">课程ID</label>
			<div class="controls">
			
				<input type="text"  name="lessonId" id="lessonId" placeholder="请输入课程ID" maxlength="19"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="expireTime">超时时间</label>
			<div class="controls">
			
				<input type="text"  name="expireTime" id="expireTime" placeholder="请输入超时时间" maxlength="19"/>
				
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="state">状态</label>
			<div class="controls">
			
		
		<select class="forms_select" name="state" id="state">
			
				<option value="1">正常</option>
				<option value="2">超期</option>
				<option value="3">无效</option>
		</select>
	
	

			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-primary" id="btn_submit">保存</a>
	<a href="javascript:;" class="btn"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 
		 activateCode:  {must: true, maxlength:50, ftip:'激活码,最多50个字符'},
		 lessonId:  {must: true, maxlength:19, ftip:'课程ID,最多19个字符'},
		 expireTime:  {must: true, maxlength:19, ftip:'超时时间,最多19个字符'},
		 state:  {must: true, maxlength:3, ftip:'状态,最多3个字符'}
	};
	

	j('#btn_submit').click(function(e) {
		gUtils.fSubmitForm(
			j("#form1").serialize(), 
			set, 
			'/activateCode/doAdd.action', 
			function() {
				gDialog.fClose();
				queryList(1);
			}
		);
	});
	
	//form.friend.init(set);
}(jQuery);
</script>