#set($layout='/WEB-INF/vm/layout/adminLayout.vm')
    
<div class="modal-body auto-height-body"  id="update_question">
	<form class="form-horizontal"  id="form_update_Question">
	
		 <div class="control-group">
			<label class="control-label" for="id">ID</label>
			<div class="controls">
			
			<input type="text"  name="id" id="id" placeholder="请输入ID" maxlength="19" value="$!{question.id}"readonly/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="questionType">试题类型</label>
			<div class="controls">
			
        
		<select class="forms_select input-medium" name="questionType" id="questionType">
				<option value="0" #if($question.questionType==0) selected #end>英译汉</option>
				<option value="1" #if($question.questionType==1) selected #end>汉译英</option>
				<option value="3" #if($question.questionType==3) selected #end>听选</option>
				<option value="4" #if($question.questionType==4) selected #end>听写</option>
</select>
		
    

			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="lessonId">课程ID</label>
			<div class="controls">
			
			<input type="text"  name="lessonId" id="lessonId" placeholder="请输入课程ID" maxlength="10" value="$!{question.lessonId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="unitNbr">单元号</label>
			<div class="controls">
			
			<input type="text"  name="unitNbr" id="unitNbr" placeholder="请输入单元号" maxlength="3" value="$!{question.unitNbr}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="wordId">单词ID</label>
			<div class="controls">
			
			<input type="text"  name="wordId" id="wordId" placeholder="请输入单词ID" maxlength="10" value="$!{question.wordId}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="vocCode">单词CODE</label>
			<div class="controls">
			
			<input type="text"  name="vocCode" id="vocCode" placeholder="请输入单词CODE" maxlength="50" value="$!{question.vocCode}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="spelling">单词拼写</label>
			<div class="controls">
			
			<input type="text"  name="spelling" id="spelling" placeholder="请输入单词拼写" maxlength="128" value="$!{question.spelling}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="question">题描述</label>
			<div class="controls">
			
			<input type="text"  name="question" id="question" placeholder="请输入题描述" maxlength="255" value="$!{question.question}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="choices">选项</label>
			<div class="controls">
			
			<input type="text"  name="choices" id="choices" placeholder="请输入选项" maxlength="255" value="$!{question.choices}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="answerIndex">正确答案</label>
			<div class="controls">
			
			<input type="text"  name="answerIndex" id="answerIndex" placeholder="请输入正确答案" maxlength="20" value="$!{question.answerIndex}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="level">难易层度</label>
			<div class="controls">
			
        
		<select class="forms_select input-medium" name="level" id="level">
				<option value="0" #if($question.level==0) selected #end>未知</option>
				<option value="1" #if($question.level==1) selected #end>容易</option>
				<option value="2" #if($question.level==2) selected #end>中等</option>
				<option value="3" #if($question.level==3) selected #end>较难</option>
</select>
		
    

			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="state">状态</label>
			<div class="controls">
			
        
		<select class="forms_select input-medium" name="state" id="state">
				<option value="1" #if($question.state==1) selected #end>有效</option>
				<option value="2" #if($question.state==2) selected #end>无效</option>
</select>
		
    

			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-sm btn-primary" id="btn_update_Question">保存修改</a>
	<a href="javascript:;" class="btn btn-sm"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 		id:  {must: true, maxlength:19, ftip:'ID,最多19个字符' ,handler:'int' },
		questionType:  {must: false, maxlength:3, ftip:'试题类型,最多3个字符' ,handler:'int' },
		lessonId:  {must: false, maxlength:10, ftip:'课程ID,最多10个字符' ,handler:'int' },
		unitNbr:  {must: false, maxlength:3, ftip:'单元号,最多3个字符' ,handler:'int' },
		wordId:  {must: false, maxlength:10, ftip:'单词ID,最多10个字符' ,handler:'int' },
		vocCode:  {must: false, maxlength:50, ftip:'单词CODE,最多50个字符'},
		spelling:  {must: false, maxlength:128, ftip:'单词拼写,最多128个字符'},
		question:  {must: false, maxlength:255, ftip:'题描述,最多255个字符'},
		choices:  {must: false, maxlength:255, ftip:'选项,最多255个字符'},
		answerIndex:  {must: false, maxlength:20, ftip:'正确答案,最多20个字符'},
		level:  {must: false, maxlength:3, ftip:'难易层度,最多3个字符' ,handler:'int' },
		state:  {must: false, maxlength:3, ftip:'状态,最多3个字符' ,handler:'int' }
	};
	

	j('#btn_update_Question').click(function(e) {
		gUtils.fSubmitForm(
			j("#form_update_Question").serialize(),
			set, 
			'/question/doUpdate.action', 
			function() {
				gDialog.fClose();
				queryQuestionList(1);
			}
		);
	});
	
	//form.friend.init(set);
}(jQuery);
</script>