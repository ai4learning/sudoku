		</select>
	
    


		
		<label for="lessonId">课程ID</label>
			
			<input type="text"  name="lessonId" id="lessonId_search" class="input input-medium" placeholder="请输入课程ID">
			

		
		<label for="wordId">单词ID</label>
			
			<input type="text"  name="wordId" id="wordId_search" class="input input-medium" placeholder="请输入单词ID">
			

		
		<label for="state">状态</label>
			
        
		<select class="forms_select input-medium" name="state" id="state_search">
			<option value="">全部</option>
			
				<option value="1">有效</option>
				<option value="2">无效</option>
		</select>
	
    


		
		<input type="button" onclick="queryQuestionList();" class="btn" value="搜索"  />

	</form>
		
<br/>
		 <div class="page_operate">
			 <button class="btn  btn-primary" type="button" id="add-question">创建 试题</button>
		</div>


	<div id="dl_Question"></div>
</div>
<script language="javascript">
	function queryQuestionList(pageNo) {
		if (!pageNo) {
			pageNo = 1;
		}
		var page = pageNo;
		var url = '/question/list.action';
		var param = {
			page: page
		};
		
		var pageSize=jQuery("#JPageSize_queryList").val();
        if(pageSize && !isNaN(pageSize)){
            param['pageSize']=pageSize;
        }

		gUtils.fMergeParam(param,"searchForm_Question");
		gUtils.fGetHtml(url, 'dl_Question', param,'数据加载中...');
	}
	queryQuestionList();




void function(j) {
	jQuery("#add-question").click(function(){
		gDialog.fCreate({title: '创建 试题', url: '/question/add.action',width:700}).show();
	});
	
}(jQuery);

</script>