
<div class="row-fluid">
	<div class="span12">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
 			<th><span>ID</span></th>
			<th><span>学生ID</span></th>
			<th><span>单词数</span></th>
			<th><span>状态</span></th>
			<th><span>修改时间</span></th>

				<th class="operate">操作</th>
				</tr>
			</thead>


			<tbody>
	#if($list && $list.size()!=0)
		    #foreach($item in $list)
		   <tr>
				 			<td>$!item.id</td>
			<td>$!item.studentId</td>
			<td>$!item.count</td>
			<td>
        
			
				#if($item.state==1)<span class="">有效</span> #end	
			
				#if($item.state==2)<span class="">无效</span> #end	
			
	
    </td>
			<td>$!dateFormatUtils.format($!item.modified)</td>

				<td class="operate">
					<button class="btn btn-primary JUpdate-wordStudyStatistic" type="button" itemid="$!item.id">编辑</button>
					<button class="btn btn-info JView-wordStudyStatistic" type="button" itemid="$!item.id">查看</button>
					<button class="btn btn-warning JDelete-wordStudyStatistic" type="button" itemid="$!item.id">删除</button>
				</td>
		  </tr>
			#end
		#else
		<tr>
					<td colspan="7" class="message_default">没有记录！</td>
		</tr>
		#end


			</tbody>


		</table>

		#if($pageQuery)
			#showPageQuery($pageQuery,'queryWordStudyStatisticList','input')
		#end

	</div>
</div>



<script language="javascript">
void function(j) {	
	j('.JDelete-wordStudyStatistic').click(function() {
		var id = j(this).attr('itemid');
		var config={title:'删除单词学习统计',info:'您确定要删除单词学习统计吗？',queryList:"queryWordStudyStatisticList",url: '/wordStudyStatistic/doDelete',param:'id='+id};
		gUtils.fConfirmAndRefreshList(config);
	});
	
	j('.JUpdate-wordStudyStatistic').click(function() {
		var id = j(this).attr('itemid');
		gDialog.fCreate({ title: '修改单词学习统计', url: '/wordStudyStatistic/update?id='+id,width:700}).show();
	});

	j('.JView-wordStudyStatistic').click(function() {
		var id = j(this).attr('itemid');
		gDialog.fCreate({ title: '查看单词学习统计', url: '/wordStudyStatistic/view?id='+id,width:700}).show();
	});
}(jQuery);
</script>