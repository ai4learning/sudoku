#set($layout='/WEB-INF/vm/layout/adminLayout.vm')
    
<div class="modal-body auto-height-body"  id="update_word">
	<form class="form-horizontal"  id="form_update_Word">
	
		 <div class="control-group">
			<label class="control-label" for="id">ID</label>
			<div class="controls">
			
			<input type="text"  name="id" id="id" placeholder="请输入ID" maxlength="10" value="$!{word.id}"readonly/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="spelling">单词拼写</label>
			<div class="controls">
			
			<input type="text"  name="spelling" id="spelling" placeholder="请输入单词拼写" maxlength="128" value="$!{word.spelling}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="meaning">释义</label>
			<div class="controls">
			
			<input type="text"  name="meaning" id="meaning" placeholder="请输入释义" maxlength="255" value="$!{word.meaning}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="soundMarkUs">美音音标</label>
			<div class="controls">
			
			<input type="text"  name="soundMarkUs" id="soundMarkUs" placeholder="请输入美音音标" maxlength="128" value="$!{word.soundMarkUs}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="soundMarkUk">国际音标</label>
			<div class="controls">
			
			<input type="text"  name="soundMarkUk" id="soundMarkUk" placeholder="请输入国际音标" maxlength="128" value="$!{word.soundMarkUk}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="wordType">词性</label>
			<div class="controls">
			
			<input type="text"  name="wordType" id="wordType" placeholder="请输入词性" maxlength="50" value="$!{word.wordType}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="mediaUri">读音</label>
			<div class="controls">
			
			<input type="text"  name="mediaUri" id="mediaUri" placeholder="请输入读音" maxlength="255" value="$!{word.mediaUri}"/>
			</div>
		</div>
		
		 <div class="control-group">
			<label class="control-label" for="state">状态</label>
			<div class="controls">
			
        
		<select class="forms_select input-medium" name="state" id="state">
				<option value="1" #if($word.state==1) selected #end>有效</option>
				<option value="2" #if($word.state==2) selected #end>无效</option>
</select>
		
    

			</div>
		</div>
		

	</form>
</div>
<div class="modal-footer">
	<a href="javascript:;" class="btn btn-sm btn-primary" id="btn_update_Word">保存修改</a>
	<a href="javascript:;" class="btn btn-sm"  data-dismiss="modal" aria-hidden="true">关闭</a>
</div>



<script language="javascript">
void function(j) {
	var set = {
		 		id:  {must: true, maxlength:10, ftip:'ID,最多10个字符' ,handler:'int' },
		spelling:  {must: false, maxlength:128, ftip:'单词拼写,最多128个字符'},
		meaning:  {must: false, maxlength:255, ftip:'释义,最多255个字符'},
		soundMarkUs:  {must: false, maxlength:128, ftip:'美音音标,最多128个字符'},
		soundMarkUk:  {must: false, maxlength:128, ftip:'国际音标,最多128个字符'},
		wordType:  {must: false, maxlength:50, ftip:'词性,最多50个字符'},
		mediaUri:  {must: false, maxlength:255, ftip:'读音,最多255个字符'},
		state:  {must: false, maxlength:3, ftip:'状态,最多3个字符' ,handler:'int' }
	};
	

	j('#btn_update_Word').click(function(e) {
		gUtils.fSubmitForm(
			j("#form_update_Word").serialize(),
			set, 
			'/word/doUpdate.action', 
			function() {
				gDialog.fClose();
				queryWordList(1);
			}
		);
	});
	
	//form.friend.init(set);
}(jQuery);
</script>