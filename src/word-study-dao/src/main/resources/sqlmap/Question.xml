<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.goldfish.dao.QuestionDao">

  <resultMap id="Question-Map" type="com.goldfish.domain.Question">
 		<id property="id" column="id"/>
		<result property="questionType" column="question_type"/>
		<result property="type" column="type"/>
		<result property="lessonId" column="lesson_id"/>
		<result property="unitNbr" column="unit_nbr"/>
		<result property="wordId" column="word_id"/>
		<result property="vocCode" column="voc_code"/>
		<result property="spelling" column="spelling"/>
		<result property="question" column="question"/>
		<result property="choices" column="choices"/>
		<result property="answerIndex" column="answer_index"/>
		<result property="level" column="level"/>
		<result property="state" column="state"/>
		<result property="created" column="created"/>
		<result property="modified" column="modified"/>

	</resultMap>


    <!-- 字段和bean里面一致，否则报错-->
	<sql id="BEAN-COMMON-SQL">
    	 
    		<where>
    		<if test="id != null"> AND id = #{id}</if>
    		<if test="questionType != null"> AND question_type = #{questionType}</if>
    		<if test="type != null"> AND type = #{type}</if>
    		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
    		<if test="wordId != null"> AND word_id = #{wordId}</if>
    		<if test="state != null"> AND state = #{state}</if>
    		
    		</where>
    	 
    	</sql>


	<!-- 可以包含bean里面没有的字段-->
	<sql id="MAP-COMMON-SQL">
	   
		<where>
		<if test="id != null"> AND id = #{id}</if>
		<if test="questionType != null"> AND question_type = #{questionType}</if>
		<if test="type != null"> AND type = #{type}</if>
		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
		<if test="wordId != null"> AND word_id = #{wordId}</if>
		<if test="state != null"> AND state = #{state}</if>
		
		</where>
	 	
	</sql>
	
	<sql id="ORDER-SQL">
	 order by id desc
	</sql>
	

	<sql id="All-FIELDS">
		id,question_type,lesson_id,unit_nbr,word_id,voc_code,spelling,question,choices,answer_index,level,state,created,modified
	</sql>

	<insert id="addQuestion" parameterType="com.goldfish.domain.Question">
		insert into question (question_type,lesson_id,unit_nbr,word_id,voc_code,spelling,question,choices,answer_index,level,state,created,modified)
			values(#{questionType},#{type},#{lessonId},#{unitNbr},#{wordId},#{vocCode},#{spelling},#{question},#{choices},#{answerIndex},#{level},#{state},#{created},#{modified})
    
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
		   select last_insert_id() as ID from dual
		</selectKey> 
   
	 </insert>

    
    <update id="updateQuestion" parameterType="com.goldfish.domain.Question" >
    	update  question 
	<set>
			<if test="questionType !=null"> question_type = #{questionType},</if>
			<if test="type !=null"> type = #{type},</if>
			<if test="lessonId !=null"> lesson_id = #{lessonId},</if>
			<if test="unitNbr !=null"> unit_nbr = #{unitNbr},</if>
			<if test="wordId !=null"> word_id = #{wordId},</if>
			<if test="vocCode !=null"> voc_code = #{vocCode},</if>
			<if test="spelling !=null"> spelling = #{spelling},</if>
			<if test="question !=null"> question = #{question},</if>
			<if test="choices !=null"> choices = #{choices},</if>
			<if test="answerIndex !=null"> answer_index = #{answerIndex},</if>
			<if test="level !=null"> level = #{level},</if>
			<if test="state !=null"> state = #{state},</if>
			<if test="created !=null"> created = #{created},</if>
			<if test="modified !=null"> modified = #{modified},</if>

	</set>
	 where id = #{id}
  	</update>
  
	

    

	<delete id="deleteQuestion" parameterType="com.goldfish.domain.Question">
		DELETE FROM question WHERE id = #{id}
	</delete>
	<select id="getQuestionById" resultMap="Question-Map" parameterType="java.lang.Long">
		SELECT  <include refid="All-FIELDS"/> FROM question	WHERE id = #{id}
	</select>  
    



	<select id="getUnique" resultMap="Question-Map" parameterType="com.goldfish.domain.Question">
		SELECT   <include refid="All-FIELDS"/> FROM question
            <include refid="BEAN-COMMON-SQL" /> limit 1
	</select>


	<select id="getListByExample" resultMap="Question-Map" parameterType="com.goldfish.domain.Question">
		SELECT   <include refid="All-FIELDS"/> FROM question
            <include refid="BEAN-COMMON-SQL" />
	</select>

	
	<select id="getQuestionByPage" resultMap="Question-Map" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT  id,question_type,lesson_id,unit_nbr,word_id,voc_code,spelling,question,choices,answer_index,level,state,modified FROM question 
		]]>
            <include refid="MAP-COMMON-SQL" />
            <include refid="ORDER-SQL" />
		LIMIT #{startIndex},#{pageSize}
	</select>
	
	<select id="count" resultType="java.lang.Integer" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT COUNT(1) FROM question
		]]>
		
              <include refid="MAP-COMMON-SQL" />
	</select>
	


</mapper>