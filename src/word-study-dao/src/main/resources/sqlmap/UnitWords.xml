<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.goldfish.dao.UnitWordsDao">

  <resultMap id="UnitWords-Map" type="com.goldfish.domain.UnitWords">
 		<id property="id" column="id"/>
		<result property="unitCode" column="unit_code"/>
		<result property="lessonId" column="lesson_id"/>
		<result property="unitNbr" column="unit_nbr"/>
		<result property="fstClassId" column="fst_class_id"/>
		<result property="unit" column="unit"/>
		<result property="vocCode" column="voc_code"/>
		<result property="vocIndex" column="voc_index"/>
		<result property="wordId" column="word_id"/>
		<result property="spelling" column="spelling"/>
		<result property="meaning" column="meaning"/>
		<result property="state" column="state"/>
		<result property="created" column="created"/>
		<result property="modified" column="modified"/>

	</resultMap>


    <!-- 字段和bean里面一致，否则报错-->
	<sql id="BEAN-COMMON-SQL">
    	 
    		<where>
    		<if test="id != null"> AND id = #{id}</if>
    		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
    		<if test="unitNbr != null"> AND unit_nbr = #{unitNbr}</if>
    		<if test="vocCode != null"> AND voc_code = #{vocCode}</if>
    		<if test="fstClassId != null"> AND fst_class_id = #{fstClassId}</if>
    		<if test="wordId != null"> AND word_id = #{wordId}</if>
    		<if test="state != null"> AND state = #{state}</if>
    		
    		</where>
    	 
    	</sql>


	<!-- 可以包含bean里面没有的字段-->
	<sql id="MAP-COMMON-SQL">
	   
		<where>
		<if test="id != null"> AND id = #{id}</if>
		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
		<if test="unitNbr != null"> AND unit_nbr = #{unitNbr}</if>
		<if test="vocCode != null"> AND voc_code = #{vocCode}</if>
		<if test="fstClassId != null"> AND fst_class_id = #{fstClassId}</if>
		<if test="wordId != null"> AND word_id = #{wordId}</if>
		<if test="state != null"> AND state = #{state}</if>
		
		</where>
	 	
	</sql>
	
	<sql id="ORDER-SQL">
	 order by id desc
	</sql>
	

	<sql id="All-FIELDS">
		id,unit_code,lesson_id,unit_nbr,fst_class_id,unit,voc_code,voc_index,word_id,spelling,meaning,state,created,modified
	</sql>

	<insert id="addUnitWords" parameterType="com.goldfish.domain.UnitWords">
		insert into unit_words (unit_code,lesson_id,unit_nbr,fst_class_id,unit,voc_code,voc_index,word_id,spelling,meaning,state,created,modified)
			values(#{unitCode},#{lessonId},#{unitNbr},#{fstClassId},#{unit},#{vocCode},#{vocIndex},#{wordId},#{spelling},#{meaning},#{state},#{created},#{modified})
    
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
		   select last_insert_id() as ID from dual
		</selectKey> 
   
	 </insert>

    
    <update id="updateUnitWords" parameterType="com.goldfish.domain.UnitWords" >
    	update  unit_words 
	<set>
			<if test="unitCode !=null"> unit_code = #{unitCode},</if>
			<if test="lessonId !=null"> lesson_id = #{lessonId},</if>
			<if test="unitNbr !=null"> unit_nbr = #{unitNbr},</if>
			<if test="fstClassId !=null"> fst_class_id = #{fstClassId},</if>
			<if test="unit !=null"> unit = #{unit},</if>
			<if test="vocCode !=null"> voc_code = #{vocCode},</if>
			<if test="vocIndex !=null"> voc_index = #{vocIndex},</if>
			<if test="wordId !=null"> word_id = #{wordId},</if>
			<if test="spelling !=null"> spelling = #{spelling},</if>
			<if test="meaning !=null"> meaning = #{meaning},</if>
			<if test="state !=null"> state = #{state},</if>
			<if test="created !=null"> created = #{created},</if>
			<if test="modified !=null"> modified = #{modified},</if>

	</set>
	 where id = #{id}
  	</update>
  
	

    

	<delete id="deleteUnitWords" parameterType="com.goldfish.domain.UnitWords">
		DELETE FROM unit_words WHERE id = #{id}
	</delete>
	<select id="getUnitWordsById" resultMap="UnitWords-Map" parameterType="java.lang.Long">
		SELECT  <include refid="All-FIELDS"/> FROM unit_words	WHERE id = #{id}
	</select>  
    



	<select id="getUnique" resultMap="UnitWords-Map" parameterType="com.goldfish.domain.UnitWords">
		SELECT   <include refid="All-FIELDS"/> FROM unit_words
            <include refid="BEAN-COMMON-SQL" /> limit 1
	</select>


	<select id="getListByExample" resultMap="UnitWords-Map" parameterType="com.goldfish.domain.UnitWords">
		SELECT   <include refid="All-FIELDS"/> FROM unit_words
            <include refid="BEAN-COMMON-SQL" />
	</select>

	
	<select id="getUnitWordsByPage" resultMap="UnitWords-Map" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT  id,unit_code,lesson_id,unit_nbr,fst_class_id,unit,voc_code,voc_index,word_id,spelling,meaning,state,modified FROM unit_words
		]]>
            <include refid="MAP-COMMON-SQL" />
            <include refid="ORDER-SQL" />
		LIMIT #{startIndex},#{pageSize}
	</select>
	
	<select id="count" resultType="java.lang.Integer" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT COUNT(1) FROM unit_words
		]]>
		
              <include refid="MAP-COMMON-SQL" />
	</select>
	


</mapper>