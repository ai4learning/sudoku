<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.goldfish.dao.UnitDao">

  <resultMap id="Unit-Map" type="com.goldfish.domain.Unit">
 		<id property="id" column="id"/>
		<result property="moduleCode" column="module_code"/>
		<result property="lessonId" column="lesson_id"/>
		<result property="unitNbr" column="unit_nbr"/>
		<result property="unit" column="unit"/>
		<result property="totalWords" column="total_words"/>
		<result property="state" column="state"/>
		<result property="created" column="created"/>
		<result property="modified" column="modified"/>

	</resultMap>


    <!-- 字段和bean里面一致，否则报错-->
	<sql id="BEAN-COMMON-SQL">
    	 
    		<where>
    		<if test="id != null"> AND id = #{id}</if>
    		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
    		<if test="unitNbr != null"> AND unit_nbr = #{unitNbr}</if>
    		<if test="state != null"> AND state = #{state}</if>
    		
    		</where>
    	 
    	</sql>


	<!-- 可以包含bean里面没有的字段-->
	<sql id="MAP-COMMON-SQL">
	   
		<where>
		<if test="id != null"> AND id = #{id}</if>
		<if test="lessonId != null"> AND lesson_id = #{lessonId}</if>
		<if test="unitNbr != null"> AND unit_nbr = #{unitNbr}</if>
		<if test="state != null"> AND state = #{state}</if>
		
		</where>
	 	
	</sql>
	
	<sql id="ORDER-SQL">
	 order by id desc
	</sql>
	

	<sql id="All-FIELDS">
		id,module_code,lesson_id,unit_nbr,unit,total_words,state,created,modified
	</sql>

	<insert id="addUnit" parameterType="com.goldfish.domain.Unit">
		insert into unit (module_code,lesson_id,unit_nbr,unit,total_words,state,created,modified)
			values(#{moduleCode},#{lessonId},#{unitNbr},#{unit},#{totalWords},#{state},#{created},#{modified})
    
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
		   select last_insert_id() as ID from dual
		</selectKey> 
   
	 </insert>

    
    <update id="updateUnit" parameterType="com.goldfish.domain.Unit" >
    	update  unit 
	<set>
			<if test="moduleCode !=null"> module_code = #{moduleCode},</if>
			<if test="lessonId !=null"> lesson_id = #{lessonId},</if>
			<if test="unitNbr !=null"> unit_nbr = #{unitNbr},</if>
			<if test="unit !=null"> unit = #{unit},</if>
			<if test="totalWords !=null"> total_words = #{totalWords},</if>
			<if test="state !=null"> state = #{state},</if>
			<if test="created !=null"> created = #{created},</if>
			<if test="modified !=null"> modified = #{modified},</if>

	</set>
	 where id = #{id}
  	</update>
  
	

    

	<delete id="deleteUnit" parameterType="com.goldfish.domain.Unit">
		DELETE FROM unit WHERE id = #{id}
	</delete>
	<select id="getUnitById" resultMap="Unit-Map" parameterType="java.lang.Long">
		SELECT  <include refid="All-FIELDS"/> FROM unit	WHERE id = #{id}
	</select>  
    



	<select id="getUnique" resultMap="Unit-Map" parameterType="com.goldfish.domain.Unit">
		SELECT   <include refid="All-FIELDS"/> FROM unit
            <include refid="BEAN-COMMON-SQL" /> limit 1
	</select>


	<select id="getListByExample" resultMap="Unit-Map" parameterType="com.goldfish.domain.Unit">
		SELECT   <include refid="All-FIELDS"/> FROM unit
            <include refid="BEAN-COMMON-SQL" />
	</select>

	
	<select id="getUnitByPage" resultMap="Unit-Map" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT  id,module_code,lesson_id,unit_nbr,unit,total_words,state,modified FROM unit 
		]]>
            <include refid="MAP-COMMON-SQL" />
            <include refid="ORDER-SQL" />
		LIMIT #{startIndex},#{pageSize}
	</select>
	
	<select id="count" resultType="java.lang.Integer" parameterType="java.util.HashMap">
		<![CDATA[
			SELECT COUNT(1) FROM unit
		]]>
		
              <include refid="MAP-COMMON-SQL" />
	</select>
	


</mapper>